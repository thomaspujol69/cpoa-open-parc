{% extends 'base.html.twig' %}

{% block title %}Login Open Parc{% endblock %}

{% block body %}
{% include 'common/header.html' %}

<div class="col-md pt-5 lightprimary">
    <div class="pt-5 pb-3 mb-5 border dim500 center">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <h5 class="text-center mb-3">PLEASE SIGN IN</h5>
            <div><label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus></div>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn button mt-3 mb-3" type="submit">Sign in</button>
            <p class="">You aren't register yet ? <a href="/register">register</a><p>
        </form>
    </div>
</div>
{% include 'common/footer.html' %}

{% endblock %}
